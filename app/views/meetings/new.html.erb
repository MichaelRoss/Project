<h1>New meeting</h1>

<div class="row">
  <div class="span6 offset3">
      <%= form_for(@meeting) do |f| %>
        <% if @meeting.errors.any? %>
          <div id="error_explanation">
          <h2><%= pluralize(@meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>
          <ul>
          <% @meeting.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.hidden_field :requested_by, :value => current_user.id %>
        </div>
        <div class="field">
          <%= f.label :with, "With:" %><br />
          <%=f.collection_select :with, @users, :id, :name%>
        </div>
        <div class="field">
          <%= f.label :date, "Date:" %><br />
          <%= f.date_select :date %>
        </div>
        <div class="field">
          <%= f.label :time, "Time:" %><br />
          <%= f.time_select :time %>
        </div>

        <div class="field">
          <%= f.label :notes, "Notes: " %><br />
          <%= f.text_area :notes %>
        </div>
        <div class="actions">
          <%= f.submit "Request Meeting", :class=> "btn btn-large btn-primary" %>
        </div>
    <% end %>

    <%= link_to 'Back', meetings_path %>
  </div>
</div>
